generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Report {
  id                 String            @id @default(uuid())
  sourceType         String // e.g. "Experian", "Equifax", "Array", "ManualUpload"
  sourceDocId        String? // original document reference
  uploadedDocumentId String?
  uploadedDocument   UploadedDocument? @relation(fields: [uploadedDocumentId], references: [id])
  createdAt          DateTime          @default(now())

  // Universal fields
  firstName   String?
  lastName    String?
  ssnLast4    String?
  dateOfBirth DateTime?

  accountNumber String?
  accountType   String?
  accountStatus String?
  balance       Decimal?
  openedDate    DateTime?
  closedDate    DateTime?

  rawPayload Json // original parsed data for audit/debug
}

model CanonicalField {
  id            String         @id @default(uuid())
  name          String         @unique
  dataType      String
  description   String?
  fieldMappings FieldMapping[]
}

model FieldMapping {
  id               String          @id @default(uuid())
  sourceType       String // "Experian", "Equifax", etc.
  sourceField      String // e.g. "acct_num", "account_no"
  targetField      String // e.g. "accountNumber"
  canonicalField   CanonicalField? @relation(fields: [canonicalFieldId], references: [id])
  canonicalFieldId String?

  @@unique([sourceType, sourceField, targetField], name: "sourceType_sourceField_targetField")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  createdAt DateTime @default(now())
  uploads   UploadedDocument[]
}

model UploadedDocument {
  id         String   @id @default(uuid())
  filename   String
  mimeType   String
  fileSize   Int
  uploadedAt DateTime @default(now())
  sourceType String
  rawText    String?
  rawBytes   Bytes?
  parsedData Json
  reports    Report[]

  sha256          String? @unique
  storageProvider String  @default("db")
  s3Bucket        String?
  s3ObjectKey     String?

  userId           String?
  user             User?   @relation(fields: [userId], references: [id])
  reportFingerprint String?

  @@index([userId, reportFingerprint])
}
