generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Report {
  id            String   @id @default(uuid())
  sourceType    String   // e.g. "Experian", "Equifax", "Array", "ManualUpload"
  sourceDocId   String?  // original document reference
  createdAt     DateTime @default(now())

  // Universal fields
  firstName     String?
  lastName      String?
  ssnLast4      String?
  dateOfBirth   DateTime?

  accountNumber String?
  accountType   String?
  accountStatus String?
  balance       Decimal?
  openedDate    DateTime?
  closedDate    DateTime?

  rawPayload    Json     // original parsed data for audit/debug
}

model FieldMapping {
  id            String @id @default(uuid())
  sourceType    String // "Experian", "Equifax", etc.
  sourceField   String // e.g. "acct_num", "account_no"
  targetField   String // e.g. "accountNumber"
}

model UploadedDocument {
  id          String   @id @default(uuid())
  filename    String
  mimeType    String
  uploadedAt  DateTime @default(now())
  sourceType  String
  parsedData  Json
}
