generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Report {
  id          String   @id @default(uuid())
  sourceType  String // e.g. "Experian", "Equifax", "Array", "ManualUpload"
  sourceDocId String? // original document reference
  createdAt   DateTime @default(now())

  // Universal fields
  firstName   String?
  lastName    String?
  ssnLast4    String?
  dateOfBirth DateTime?

  accountNumber String?
  accountType   String?
  accountStatus String?
  balance       Decimal?
  openedDate    DateTime?
  closedDate    DateTime?

  rawPayload Json // original parsed data for audit/debug
}

model CanonicalField {
  id            String         @id @default(uuid())
  name          String         @unique
  dataType      String
  description   String?
  fieldMappings FieldMapping[]
}

model FieldMapping {
  id          String @id @default(uuid())
  sourceType  String
  sourceField String

  canonicalFieldId String
  canonicalField   CanonicalField @relation(fields: [canonicalFieldId], references: [id])

  @@unique([sourceType, sourceField, canonicalFieldId])
}

model UploadedDocument {
  id         String   @id @default(uuid())
  filename   String
  mimeType   String
  uploadedAt DateTime @default(now())
  sourceType String
  parsedData Json
}
